@model IEnumerable<dynamic>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Admin - Měsíční přehled";
}

@section Styles {
    <link rel="stylesheet" href="~/css/adminmonth.css">
}

<div class="calendar-container">
    <div class="title-bar">
        <h1>Admin - Měsíční přehled</h1>
        <hr />
    </div>

    <div class="request-table">
        <div class="table-row header">
            <span class="table-cell">Jméno</span>
            <span class="table-cell">Datum Žádosti</span>
            <span class="table-cell action-header">Akce</span>
        </div>

        @foreach (var request in Model)
        {
            <div class="table-row">
                <span class="table-cell">@request.FullName</span>
                <span class="table-cell">@request.RequestDate.ToString("dd.MM.yyyy")</span>
                <span class="table-cell action-cell">
                    <form asp-action="AcceptRequest" asp-route-id="@request.Id" method="post" class="inline-form">
                        <button type="submit" class="accept-btn">Accept</button>
                    </form>
                    <form asp-action="DeleteRequest" asp-route-id="@request.Id" method="post" class="inline-form">
                        <button type="submit" class="deny-btn">Cancel</button>
                    </form>
                </span>
            </div>
        }
    </div>
</div>
